@inject IDialogService DialogService
@inject AppOptionsContainer AppOptionsContainer

<MudDialog>
    <TitleContent>
        Options
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="AppOptions.ProjectsDirectory" Label="Projects Directory" Variant="Variant.Text" AutoGrow></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Accept">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    private AppOptions AppOptions { get; set; } = null!;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        AppOptions = AppOptionsContainer.AppOptions;
    }

    private void Accept()
    {
        AppOptionsContainer.AppOptions = AppOptions;
        MudDialog.Close();
    }

    private void Close() => MudDialog.Close();

}